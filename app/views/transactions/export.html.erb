<h3 align="center">CSP Fund Transfer Statement of <%= params[:date_selected] %> </h3>
<link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
<% total = 0 %>
<table class="tablesorter1" align="center">
  <thead>
  <tr>
    <th>SNo</th>
    <th>CSP Code</th>
    <th>Name</th>
    <th>Account</th>
    <th>Branch</th>
    <th>Amount</th>
  </tr>
  </thead>
  <% i=1 %>
  <% @transactions.each do |tr| %>
      <tr align="left">
        <td><%= i %></td>
        <td><%= tr.csp_code %></td>
        <td><%= get_csp_name(tr).titleize %></td>
        <td><%= get_csp_account_number(tr) %></td>
        <td><%= get_csp_branch(tr).titleize %></td>
        <% amount = (-1) * tr.amount %>
        <td align="right"><%= amount= amount % 100 == 0 ? amount : amount - (amount % 100) %></td>
        <% total += amount %>
      </tr>
      <% i = i + 1 %>
  <% end %>
  <tr>
    <td colspan="5" align="right">Total: </td>
    <td align="right"><%= total %></td>
  </tr>
</table>

<style type="text/css">
    table.tablesorter1 {
        border-collapse: collapse;
        border: 1px solid #000000;
        font-family: 'Ubuntu', sans-serif;
        font-weight: 400;
    }

    table.tablesorter1 td, table.tablesorter1 th {
        border-collapse: collapse;
        border: 1px solid #000000;
    }
    h3
    {
        font-family: 'Ubuntu', sans-serif;
        font-weight: 400;

    }

</style>

