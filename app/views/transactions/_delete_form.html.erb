<h4>Please select the Date to Delete Transactions </h4>
<%= form_tag remove_transactions_path do  -%>
<table class="tablesorter1" align="center">

<tr>
      <td>
        <label for="vle_user">
            Select a Date :
        </label>
    </td>
    <td>
        <%= text_field_tag :remove_date_selected, Time.now.strftime('%d-%m-%Y') -%>
    </td>
</tr>
 <tr>
      <td colspan='2' align="right">
        <%= submit_tag 'Submit',:onClick=>"return confirmSubmit()" -%>
    </td>
</tr>
</table>
<% end -%>
<script>
    $(function() {
        $("#remove_date_selected").datepicker({dateFormat:'dd-mm-yy', maxDate:0 });
    });
    function confirmSubmit() {
        var agree = confirm("Are you sure to want to Remove Transactions..?");
        if (agree) {
            return true;}
        else
        {return false;}
    }
</script>
<style type="text/css">
  table.tablesorter1 {
	border-collapse: collapse;
	border: 1px solid #CDCDCD;
	text-align: center;
}
  table.tablesorter1 td, table.tablesorter1 th{
      border-collapse: collapse;
      border: 1px solid #CDCDCD;
  }

</style>