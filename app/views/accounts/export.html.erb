<table class="tablesorter">
  <thead>
  <tr>
    <th>SNo</th>
    <th>CSP Code</th>
    <th>Name</th>
    <th>District</th>
    <th>Account No</th>
    <th>Branch</th>
  </tr>
  </thead>
  <% i=1 %>
  <% @accounts.each do |tr| %>
      <tr align="left">
        <td><%= i %></td>
        <td><%= tr.csp_code %></td>
        <td><%= tr.name %></td>
        <td><%= tr.district %></td>
        <td><%= tr.account_number %></td>
        <td><%= tr.bank_branch %></td>
      </tr>
      <% i = i + 1 %>
  <% end %>
</table>

<style type="text/css">
  table.tablesorter {
	border-collapse: collapse;
	border: 1px solid #000000;
	text-align: center;
}
  table.tablesorter td, table.tablesorter th{
      border-collapse: collapse;
      border: 1px solid #000000;
  }

</style>